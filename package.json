{
	"name": "inflink-rs-workspace",
	"private": true,
	"version": "2.1.0",
	"scripts": {
		"build": "pnpm --filter inflink-rs build",
		"watch": "pnpm --filter inflink-rs build:dev",
		"build:backend": "cargo build --release",
		"lint": "pnpm biome check .",
		"format": "pnpm biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"release": "standard-version"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"husky": "^9.1.7",
		"standard-version": "^9.5.0",
		"typescript": "^5.9.2"
	},
	"packageManager": "pnpm@10.17.1",
	"standard-version": {
		"types": [
			{
				"type": "feat",
				"section": "✨ Features"
			},
			{
				"type": "fix",
				"section": "🐛 Bug Fixes"
			},
			{
				"type": "chore",
				"section": "🚚 Chores"
			},
			{
				"type": "docs",
				"section": "📚 Documentation"
			},
			{
				"type": "style",
				"section": "🎨 Styling"
			},
			{
				"type": "refactor",
				"section": "♻️ Code Refactoring"
			},
			{
				"type": "perf",
				"section": "🚀 Performance Improvements"
			},
			{
				"type": "test",
				"section": "🚨 Tests"
			}
		],
		"bumpFiles": [
			{
				"filename": "package.json",
				"type": "json"
			},
			{
				"filename": "InfinityLink/package.json",
				"type": "json"
			},
			{
				"filename": "InfinityLink/manifest.json",
				"type": "json"
			},
			{
				"filename": "smtc_handler/Cargo.toml",
				"updater": "standard-version-updater.js"
			}
		]
	}
}
