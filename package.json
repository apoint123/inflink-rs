{
	"name": "inflink-rs-workspace",
	"private": true,
	"version": "3.2.6",
	"license": "GPL-3.0-only",
	"packageManager": "bun@1.3.5",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.3.5"
	},
	"workspaces": [
		"packages/frontend"
	],
	"scripts": {
		"build": "bun scripts/build.ts",
		"dev": "bun scripts/build.ts --dev --watch",

		"build:frontend": "bun scripts/build.ts --no-rust",

		"lint": "bun biome check .",
		"format": "bun biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",

		"cs:add": "bun changeset add",
		"cs:version": "bun changeset version && bun ./scripts/sync-versions.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"husky": "^9.1.7",
		"typescript": "^5.9.3"
	}
}
