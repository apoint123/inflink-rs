{
	"name": "inflink-rs-workspace",
	"private": true,
	"version": "3.2.6",
	"packageManager": "bun@1.3.5",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.1.0"
	},
	"workspaces": [
		"InfinityLink"
	],
	"scripts": {
		"build:frontend": "bun run --cwd InfinityLink build",
		"watch": "bun run --cwd InfinityLink build:dev",
		"dev": "bun watch",
		"build:backend:x64": "cargo build --release --target=x86_64-pc-windows-msvc -p smtc_handler",
		"build:backend:x86": "cargo build --release --target=i686-pc-windows-msvc -p smtc_handler",
		"build:backend": "bun build:backend:x64 && bun build:backend:x86",
		"build": "bun build:backend && bun build:frontend",
		"lint": "bun biome check .",
		"format": "bun biome format . --write",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"cs:add": "bun changeset add",
		"cs:version": "bun changeset version && bun ./scripts/sync-versions.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^24.10.1",
		"husky": "^9.1.7",
		"typescript": "^5.9.3"
	}
}
