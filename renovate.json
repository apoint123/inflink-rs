{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":dependencyDashboard", ":semanticCommits"],
	"labels": ["dependencies"],
	"schedule": ["* 3 * * *"],
	"packageRules": [
		{
			"matchManagers": ["pnpm"],
			"matchDepTypes": ["devDependencies"],
			"groupName": "pnpm development dependencies",
			"groupSlug": "pnpm-dev",
			"automerge": true,
			"automergeType": "pr"
		},
		{
			"matchManagers": ["cargo"],
			"groupName": "rust crates",
			"groupSlug": "rust-crates"
		},
		{
			"groupName": "Material UI packages",
			"groupSlug": "mui",
			"matchPackageNames": ["/^@mui//"]
		}
	]
}
